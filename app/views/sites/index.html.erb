<h1>All Sites</h1>

<table class="list">
  <tr>
    <th>Name</th>
	<th># of Users</th>
	<th colspan="3">Actions</th>
  </tr>

<% for site in @sites %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%=h site.name %></td>
	<% if site.users %>
		<td><%= link_to site.users.length, site_users_path(site) %></td>
	<% else %>
		<td>0</td>
	<% end %>
    <td><%= show_link site %></td>
    <td><%= edit_link edit_site_path(site) %></td>
    <td><%= destroy_link site %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link 'site', new_site_path %>
